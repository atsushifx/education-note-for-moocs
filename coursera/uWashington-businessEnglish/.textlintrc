{
  "filters": {
    "allowlist": [
      "../../.textlint/allowlist.yml"
    ]
  },
  "rules": {
    "ginger": {
      "skipPatterns": [
        "js.dev",
        "dev",
        "("
      ]
    },
    "write-good": {
      "passive": true,
      "thereIs": true,
      "adverb": true
    },
    "common-misspellings": {},
    "spelling": {
      "skipPatterns": [
        /\d+/g,
        "Atsushi",
        "Furukawa",
        /AGLA/i,
        /aglabo/i,
        "gmail.com",
        "js.dev",
        "IJ",
        "Ok",
        /Filson/i
      ]
    },
    "@proofdict/proofdict": {
      "dictURL": "https://atsushifx.github.io/proof-dictionary/"
    },
    "@textlint-rule/no-unmatched-pair": true
  }
}
