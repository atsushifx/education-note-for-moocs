{
  "filters": {
    "allowlist": [
      "../../.textlint/allowlist.yml"
    ]
  },
  "rules": {
    "ginger": {
      "skipPatterns": [
        "js",
        "dev"
      ]
    },
    "write-good": {
      "passive": true,
      "thereIs": true,
      "adverb": true
    },
    "common-misspellings": {},
    "spelling": {
      "skipPatterns": [
        "Atsushi",
        "Furukawa",
        "Willan",
        "js.dev",
        "IJ"
      ]
    },
    "@proofdict/proofdict": {
      "dictURL": "https://atsushifx.github.io/proof-dictionary/"
    },
    "@textlint-rule/no-unmatched-pair": true
  }
}
