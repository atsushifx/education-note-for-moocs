{
  "filters": {
    "allowlist": [
      ".textlint/allowlist.yml"
    ]
  },
  "rules": { // for wriing English
    "ginger": {
      "skipPatterns": []
    },
    "write-good": {
      "passive": true,
      "thereIs": true,
      "adverb": true,
    },
    "common-misspellings": {},
    "spelling": {
      "language": "en",
      "skipPatterns": [
        "gamification",
        "LinkedIn",
      ],
      "suggestCorrections": true,
    },
    "@proofdict/proofdict": {
      "dictURL": "https://atsushifx.github.io/proof-dictionary/"
    },
    "@textlint-rule/no-unmatched-pair": true
  }
}
